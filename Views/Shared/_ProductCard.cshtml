@model Product

<div class="card" style="width: 18rem;">
    @if (!string.IsNullOrEmpty(Model.ImagePath))
    {
        <img src="~/@Model.ImagePath" class="card-img-top" alt="@Model.Name">
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">Cijena: @Model.Price â‚¬</p>
        <p class="card-text">Kategorija: @Model.Category?.Name</p>
        <p class="card-text">Popust: @Model.Discount?.Percentage%</p>
        <a href="@Url.Action("Details", "Products", new { id = Model.Id })" class="btn btn-primary">Detalji</a>
    </div>
</div>