@model IEnumerable<Product>

<h2>Proizvodi</h2>

<p>
    <a asp-action="Create">Dodaj novi proizvod</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Cijena</th>
            <th>Kategorija</th>
            <th>Popust</th>
            <th>Putanja slike</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category?.Name</td>
                <td>@product.Discount?.Percentage%</td>
                <td>@product.ImagePath</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id">Uredi</a> 
                    <a asp-action="Delete" asp-route-id="@product.Id">Obri≈°i</a>
                </td>
            </tr>
        }
    </tbody>
</table>