@model IEnumerable<Category>

<h2>Kategorije</h2>

<p>
    <a asp-action="Create">Dodaj novu kategoriju</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id">Uredi</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id">Obri≈°i</a>
                </td>
            </tr>
        }
    </tbody>
</table>